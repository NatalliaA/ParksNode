<% layout('layouts/boilerplate') %>

<div class='mt-3 mb-4'>
    <h2>All Parks</h2>
    <div class='mt-4'>
        <a class='btn btn-primary' href='/parks/new'>Add a New Park</a>
        </div>
</div>
    <% for (let park of parks){ %>
        <div class="card mb-3">
           <div class="row">
               <div class="col-md-4">
                  <% if(park.images.length) { %>                                     
                   <img class='img-fluid' src="<%= park.images[0].url %>" alt="park photo">
                   <% }else { %>
                    <img class='img-fluid' src="/images/default.jpg" alt="park photo">
                    <% } %>                                    
               </div>
               <div class="col-md-8">
                   <div class="card-body">
                       <h5 class="card-title"><%= park.title %></h5>
                       <p class="card-text"><%= park.description %></p>
                       <p class="card-text">
                           <small class="text-muted"><%= park.location %></small>
                       </p>                        
                       <a class='btn btn-primary' href='/parks/<%= park._id %>'>Read More</a>                       
                   </div>
               </div>
           </div>
        </div>      
    <% } %>




